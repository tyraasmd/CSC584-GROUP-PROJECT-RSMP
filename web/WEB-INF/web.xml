<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterAccountServlet</servlet-name>
        <servlet-class>com.rspm.controller.RegisterAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMealPlanServlet</servlet-name>
        <servlet-class>com.rspm.controller.AddMealPlanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MealPlanServlet</servlet-name>
        <servlet-class>com.rspm.controller.MealPlanServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterAccountServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.rspm.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecipeServlet</servlet-name>
        <servlet-class>com.rspm.controller.RecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeServlet</servlet-name>
        <url-pattern>/submitRecipe</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecipeListServlet</servlet-name>
        <servlet-class>com.rspm.controller.RecipeListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeListServlet</servlet-name>
        <url-pattern>/RecipeListServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecipeDescriptionServlet</servlet-name>
        <servlet-class>com.rspm.controller.RecipeDescriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeDescriptionServlet</servlet-name>
        <url-pattern>/recipeDescription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMealPlanServlet</servlet-name>
        <url-pattern>/AddMealPlanServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MealPlanServlet</servlet-name>
        <url-pattern>/MealPlanServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
</web-app>
